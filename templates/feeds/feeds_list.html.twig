
{% extends 'base.html.twig' %}
{% block body %}
    <div class="wrapper">
        {{ include('side_bar.html.twig') }}
        <!-- Page Content -->
        <div id="content">
            <div class="row" style="padding-bottom: 20px;">
                <a href="{{ path('feeder_list') }}" class="btn btn-info" role="button">Back</a>
            </div>
            <div class="row">
                {% if feeds is empty %}
                    <div class="alert alert-success" role="alert">
                        No Records found!
                    </div>
                {% else %}
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Feed Description</th>
                            <th>Operations</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for feeds_list in feeds %}
                            <tr>
                                <td>{{ feeds_list.title }}</td>
                                <td>
                                {% if feeds_list.description is empty %}
                                    <div class="alert alert-info" role="alert">
                                        No Data found!
                                    </div>
                                {% else %}
                                    <div class="alert alert-info" role="alert">
                                        {{ feeds_list.description}}
                                    </div>
                                {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('feed_view', {'id': feeds_list.id}) }}" role="button">View Feed</a>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}