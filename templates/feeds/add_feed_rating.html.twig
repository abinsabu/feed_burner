{% extends 'base.html.twig' %}
{% block body %}
    <div class="wrapper">
        {{ include('side_bar.html.twig') }}
        <!-- Page Content -->
        <div id="content">
            <div class="row" style="padding-bottom: 20px;">
                <a href="{{ path('feed_view',{id:feed_id}) }}" class="btn btn-info" role="button">Back</a>
            </div>
            {% if is_saved == false %}
                <p class="h4 mb-4">Rate this Feed</p>
                <input id="input-6" name="input-6" class="rating rating-loading" value="0" data-min="0" data-max="5" data-step="1" />
                {{ form(ratingForm) }}
            {% else %}
                <div class="alert alert-success" role="alert">
                    You have added your rating for this feed!
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}